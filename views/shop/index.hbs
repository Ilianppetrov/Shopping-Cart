  <div class="row">
  {{#each products}}
    {{#each this}}
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="{{this.imagePath}}" class="img-responsive">
        <div class="caption">
          <h3>{{this.title}}</h3>
          <p class="overflow">{{this.description}}</p>
          <div class="clearfix">
            <span class="btn-info pull-left btn-sm" >${{this.price}}</span>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a>
            </div>
        </div>
      </div>
    </div>
    {{/each}}
  {{/each}}
  </div>