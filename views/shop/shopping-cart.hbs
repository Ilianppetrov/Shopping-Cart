{{# if products}}
  <div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <ul class="list-group">
      {{# each products}}
      <li class="list-group-item clearfix">
        <strong>{{this.item.title}}</strong>
        <span class="label label-success">$12</span>
        <button class="btn btn-default pull-right" type="button"><strong>-</strong></button>
        <span class="label pull-right">2</span>
        <button class="btn btn-default pull-right" type="button"><strong>+</strong></button>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
{{ else }}
  <div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    No Items in Cart
  </div>
</div>
{{/if}}
